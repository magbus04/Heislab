#include <stdio.h>
#include <stdlib.h>
#include <signal.h>
#include <time.h>
#include "driver/elevio.h"
int top = -1;
int orders[10][2];

void stop_pressed(){

}
void push(int floor, int button, int buttonPressed){
    if (buttonPressed == 1){
        orders[top][0] = floor;
        orders[top][1] = button;
        top++; 
    }

}

void pop() {
    orders[top][0] = 0;
    orders[top][1] = 0;
    top--; 
}

void elevator_planner_logic(){
    int moving = 0;
    time_t timer = time(NULL);
    elevio_motorDirection(DIRN_STOP);
    printf("=== ELEVATOR ONLINE ===\n");
    printf("Press the stop button on the elevator panel to exit\n");

    
    while(1){

        int floor = elevio_floorSensor();
        elevio_floorIndicator(floor);
        elevio_doorOpenLamp(1)
        if(elevio_stopButton()){
            stop_pressed();
        }
        //orders in
        for(int f = 0; f < N_FLOORS; f++){
            for(int b = 0; b < N_BUTTONS; b++){
                int btnPressed = elevio_callButton(f, b);
                elevio_buttonLamp(f,b,btnPressed);
                push(f,b,btnPressed);
            }
        }

        if(moving == 0 && orders[top][0] == -1){
            elevio_doorOpenLamp(0);
        }

        if(moving == 0 && orders[top][0] != -1){
            if(difftime(time(NULL), timer) > 3){
                elevio_doorOpenLamp(0);
                moving = 1;
            }
            else{
            elevio_doorOpenLamp(1);
            }
        }
        
        if (orders[top][0] > floor){
            elevio_motorDirection(DIRN_UP);
            }
        } elseif (orders[top][0] < floor){
            elevio_motorDirection(DIRN_DOWN);
            }


        

}

int main(){

    int floor = elevio_floorSensor();
    elevio_init();
    push(0,2,1);
    while(floor != 0){
        elevio_motorDirection(DIRN_DOWN);
        
    };

    elevio_motorDirection(DIRN_STOP);
    printf("=== ELEVATOR ONLINE ===\n");
    printf("Press the stop button on the elevator panel to exit\n");


    while(1){
        int floor = elevio_floorSensor();

        if(floor == 0){
            elevio_motorDirection(DIRN_UP);nanosleep(&(struct timespec){0, 20*1000*1000}, NULL);
        }
        (1);
        if(floor == N_FLOORS-1){
            elevio_motorDirection(DIRN_DOWN);
        }


        for(int f = 0; f < N_FLOORS; f++){
            for(int b = 0; b < N_BUTTONS; b++){
                int btnPressed = elevio_callButton(f, b);
                elevio_buttonLamp(f, b, btnPressed);
            }
        }

        if(elevio_obstruction()){
            elevio_stopLamp(1);
        } else {
            elevio_stopLamp(0);
        }
        
        if(elevio_stopButton()){
            elevio_motorDirection(DIRN_STOP);
            break;
        }
        
        nanosleep(&(struct timespec){0, 20*1000*1000}, NULL);
    }

    return 0;
}
